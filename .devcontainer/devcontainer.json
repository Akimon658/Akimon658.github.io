{
  "name": "Hugo",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "hugo",
  "workspaceFolder": "/workspace",
  "extensions": [
    "denoland.vscode-deno",
    "znck.grammarly"
  ],
  "settings": {
    "deno.enable": true,
    "deno.lint": true,
    "deno.unstable": false
  },
  "postCreateCommand": "echo 'alias server=\"hugo server --bind 0.0.0.0\"' >> ~/.bashrc"
}
